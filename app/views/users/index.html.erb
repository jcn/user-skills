<% content_for(:page_title, "Users") %>

<% @users.each do |user| %>
<div class="w-full flex my-8 items-center border-b pb-8">
  <div class="ml-8 h-20 w-20 mr-4">
    <img class="rounded-full w-full h-full object-cover" src="https://robohash.org/<%= user.email %>?size=100x100&set=set5" loading="lazy" />
  </div>

  <div class="w-60 mr-4">
    <div>
      <%= link_to user.name, "mailto:#{user.email}", class: "text-orange-500 hover:text-orange-700" %><br />
      <%= user.max_years_experience.presence || 0 %> years of experience
    </div>
  </div>
</div>
<% end %>
